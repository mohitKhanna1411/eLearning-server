<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <script>
        var app = angular.module('myApp', []);
        app.controller('admin', function($scope, $http, $window) {
            console.log("inside admin login ctrl");
            $scope.adminLogin = function(){
                console.log($scope.adminUsername);
                console.log($scope.adminPassword);

                if($scope.adminUsername == "admin" && $scope.adminPassword == "admin@123"){
                    $window.location.href = "/dashboardAdmin";
                }
                else{
                    $scope.msg = "Incorrect Admin Username/Password";
                }

            }
        });
    </script>

    <!-- Bootstrap core CSS     -->
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="../assets/css/animate.min.css" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
    <link href="../assets/css/paper-dashboard.css" rel="stylesheet"/>

</head>
<body ng-app="myApp" ng-controller ="admin">


    <div class="container" style ="margin-top: 3cm;">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading"><h3>Login Here</h3></div>

                <div class="panel-body">
                    <form ng-submit="adminLogin()">
                        <div class="row">
                            <div ng-if="msg.length > 0" class="alert alert-danger">
                                <strong><center>{{msg}}</center></strong>
                            </div>
                        </div>
                    </br>
                    <div class="row">
                        <div class="form-group">
                            <label for="username" class="col-md-4 control-label"> Admin Username</label>

                            <div class="col-md-6">
                                <input type="text" class="form-control border-input" ng-model="adminUsername" required="" autofocus>
                            </div>
                        </div>
                    </div>
                </br>
                <div class="row">

                    <div class="form-group">
                        <label for="password" class="col-md-4 control-label">Admin Password</label>

                        <div class="col-md-6">
                            <input type="password" class="form-control border-input" ng-model="adminPassword" required="">
                        </div>
                    </div>
                </div>
                
            </br>
            <div class="row">
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-wd btn-fill btn-success">
                            Login
                        </button>

                        <a class="btn btn-fill btn-wd btn-info" href="/">
                            Exit
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
</div>
</div>







</body>
</html>
